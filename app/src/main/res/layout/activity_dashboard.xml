<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/pastel_bg"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nombre del usuario -->
        <TextView
            android:id="@+id/txtUserName"
            android:text="Hola,"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/pastel_text_dark"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- TARJETA: Balance Actual -->
        <LinearLayout
            android:background="@drawable/card_bg"
            android:padding="20dp"
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Balance actual"
                    android:textColor="@color/pastel_text_light"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtBalance"
                    android:text="$0.00"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/pastel_text_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- TARJETA: Ingresos y Gastos -->
        <LinearLayout
            android:background="@drawable/card_bg"
            android:padding="20dp"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <!-- Ingresos -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Ingresos"
                    android:textColor="@color/pastel_green"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtIncome"
                    android:text="$0.00"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/pastel_text_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Gastos -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Gastos"
                    android:textColor="@color/pastel_pink"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtExpense"
                    android:text="$0.00"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/pastel_text_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <!-- TARJETA: Progreso del Presupuesto -->
        <LinearLayout
            android:background="@drawable/card_bg"
            android:padding="20dp"
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Presupuesto"
                    android:textColor="@color/pastel_text_light"
                    android:layout_marginBottom="10dp"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/progressBudget"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/pastel_blue"
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/txtBudgetStatus"
                    android:text="0% utilizado"
                    android:textColor="@color/pastel_text_dark"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
