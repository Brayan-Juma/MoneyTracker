<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/pastel_bg"
    android:padding="20dp"
    android:layout_height="match_parent">

    <!-- TÃ­tulo -->
    <TextView
        android:text="Transacciones"
        android:textColor="@color/pastel_text_dark"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- FILTROS HORIZONTALES -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/filterContainer"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/filterAll"
                android:text="Todos"
                android:padding="10dp"
                android:background="@drawable/chip_blue"
                android:textColor="@color/pastel_text_dark"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/filterIncome"
                android:text="Ingresos"
                android:padding="10dp"
                android:background="@drawable/chip_green"
                android:textColor="@color/pastel_text_dark"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/filterExpense"
                android:text="Gastos"
                android:padding="10dp"
                android:background="@drawable/chip_pink"
                android:textColor="@color/pastel_text_dark"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </HorizontalScrollView>

    <!-- LISTA DE TRANSACCIONES -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTransactions"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
