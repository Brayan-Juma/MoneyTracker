<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/pastel_bg"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Título estilo moderno -->
        <TextView
            android:text="MoneyTracker"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/pastel_text_dark"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Tarjeta resumen estilo diseño -->
        <LinearLayout
            android:background="@drawable/card_bg"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:elevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Balance Actual"
                    android:textColor="@color/pastel_text_light"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    />

                <TextView
                    android:id="@+id/txtBalance"
                    android:text="$0.00"
                    android:textColor="@color/pastel_text_dark"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>
